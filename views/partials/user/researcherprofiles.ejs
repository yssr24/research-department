<style>
    body {
        font-family: Arial, sans-serif;
    }

    .display-5 {
        font-size: 2.5rem;
        color: #333;
    }

    .card {
        transition: transform 0.2s;
    }

    .card:hover {
        transform: translateY(-5px);
    }

    .card-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: #333;
    }

    .card-text {
        font-size: 0.9rem;
        color: #666;
    }

    .btn-outline-primary {
        color: #007bff;
        border-color: #007bff;
    }

    .btn-outline-primary:hover {
        background-color: #007bff;
        color: #fff;
    }
</style>
<div class="container my-5">
    <!-- Page Header -->
    <div class="text-center mb-5">
        <h2 class="display-5">Meet Our Researchers</h2>
        <p class="text-muted">Explore profiles of Mindoro State Universityâ€™s esteemed researchers.</p>
    </div>

    <!-- Researcher Profiles Grid -->
    <div class="row row-cols-1 row-cols-md-3 g-4">
        <% researchers.forEach(researcher => { %>
        <div class="col">
            <div class="card border-0 shadow-sm text-center">
                <img src="/images/profile.jpg" class="card-img-top rounded-circle mx-auto mt-3" alt="Researcher Photo" style="width: 150px; height: 150px; object-fit: cover;">
                <div class="card-body">
                    <h5 class="card-title"><%= researcher.first_name %> <%= researcher.last_name %></h5>
                    <p class="card-text text-muted"></p>
                    <a href="#" class="btn btn-outline-primary btn-sm">View Profile</a>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
</div>